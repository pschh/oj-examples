<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<oddjob id="this">
    <job>
        <folder name=" ">
            <jobs>
                <exec name="Batch Example">
                    <args>
                        <list>
                            <values>
                                <value value="cmd"/>
                                <value value="/C"/>
                                <value value="${this.dir}\bin\greeting.bat"/>
                                <value value="Hello"/>
                            </values>
                        </list>
                    </args>
                </exec>
                <exec name="Example With Environment">
                    <environment>
                        <value key="ODDJOB_FILE" value="myfile.txt"/>
                    </environment><![CDATA[${this.dir}\bin\env.bat
                    ]]></exec>
                <sequential name="Run in Sequence">
                    <jobs>
                        <variables id="vars">
                            <buffer>
                                <buffer/>
                            </buffer>
                        </variables>
                        <exec id="one" name="One">
                            <stdout>
                                <value value="${vars.buffer}"/>
                            </stdout><![CDATA[
cmd /c echo hello
                            ]]></exec>
                        <exec id="two" name="Two">
                            <stdin>
                                <value value="${vars.buffer}"/>
                            </stdin><![CDATA[
c:/cygwin/bin/cat
                            ]]></exec>
                    </jobs>
                </sequential>
            </jobs>
        </folder>
    </job>
</oddjob>
