<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<oddjob>
    <job>
        <folder name=" ">
            <jobs>
                <sequential name="Using Ant to Manipulate Files">
                    <jobs>
                        <variables id="vars">
                            <greeting>
                                <value value="Hello World"/>
                            </greeting>
                            <testfile>
                                <value value="test.test"/>
                            </testfile>
                        </variables>
                        <ant>
                            <tasks>
                                <xml>
                                    <tasks>
                                        <patternset id="file.test">
                                            <include name="${vars.testfile}"/>
                                        </patternset>
                                        <echo message="${vars.greeting}"/>
                                        <touch file="${vars.testfile}"/>
                                        <copy todir="..">
                                            <fileset dir=".">
                                                <patternset refid="file.test"/>
                                            </fileset>
                                        </copy>
                                        <delete file="../${vars.testfile}"/>
                                        <delete file="${vars.testfile}"/>
                                        <echo message="done."/>
                                    </tasks>
                                </xml>
                            </tasks>
                        </ant>
                    </jobs>
                </sequential>
            </jobs>
        </folder>
    </job>
</oddjob>
