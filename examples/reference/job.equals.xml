<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<oddjob id="this">
    <job>
        <folder name="Examples">
            <jobs>
                <scheduling:retry name="Database Backup" xmlns:scheduling="http://rgordon.co.uk/oddjob/scheduling">
                    <schedule>
                        <schedules:interval interval="00:00:10" xmlns:schedules="http://rgordon.co.uk/oddjob/schedules"/>
                    </schedule>
                    <job>
                        <sequential>
                            <jobs>
                                <state:equals state="!COMPLETE" xmlns:state="http://rgordon.co.uk/oddjob/state">
                                    <job>
                                        <exists file="${this.dir}/work/hsqldb/mydb.lck"/>
                                    </job>
                                </state:equals>
                                <echo>Backing up the Database...</echo>
                            </jobs>
                        </sequential>
                    </job>
                </scheduling:retry>
            </jobs>
        </folder>
    </job>
</oddjob>
