<oddjob xmlns:scheduling="http://rgordon.co.uk/oddjob/scheduling"
        xmlns:state="http://rgordon.co.uk/oddjob/state"
        xmlns:schedules="http://rgordon.co.uk/oddjob/schedules"
        id="this">
    <job>
        <folder name="Examples">
            <jobs>
                <scheduling:retry name="Database Backup">
                    <job>
                        <sequential>
                            <jobs>
                                <state:equals not="true">
                                    <job>
                                        <exists file="${this.dir}/work/hsqldb/mydb.lck"/>
                                    </job>
                                </state:equals>
                                <echo text="Backing up the Database..."/>
                            </jobs>
                        </sequential>
                    </job>
                    <schedule>
                        <schedules:interval interval="00:00:10"/>
                    </schedule>
                </scheduling:retry>
            </jobs>
        </folder>
    </job>
</oddjob>
