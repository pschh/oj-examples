<oddjob>
    <job>
        <folder name=" ">
            <jobs>
                <sequential name="Waiting For a Property">
                    <jobs>
                        <variables id="waitvars"/>
                        <wait name="Wait for Variable"
                              pause="5000"
                              for="${waitvars.text}"/>
                        <echo name="Echo Text">${waitvars.text}</echo>
                    </jobs>
                </sequential>
            </jobs>
        </folder>
    </job>
</oddjob>
