<oddjob xmlns:scheduling="http://rgordon.co.uk/oddjob/scheduling"
        xmlns:state="http://rgordon.co.uk/oddjob/state">
    <job>
        <folder name=" ">
            <jobs>
                <sequential name="Trigger on Two Things">
                    <jobs>
                        <scheduling:trigger id="trigger"
                                            on="${watch-both}">
                            <job>
                                <echo id="notify"
                                      name="Triggered Job"
                                      text="You ran two things!"/>
                            </job>
                        </scheduling:trigger>
                        <state:and id="watch-both"
                                   name="Watch Two Jobs">
                            <jobs>
                                <state:mirror job="${thing1}"
                                              name="Mirror Job 1"/>
                                <state:mirror job="${thing2}"
                                              name="Mirror Job 2"/>
                            </jobs>
                        </state:and>
                        <folder name="A Folder of Jobs">
                            <jobs>
                                <echo id="thing1"
                                      name="Run me!"
                                      text="Thank you"/>
                                <echo id="thing2"
                                      name="Run me!"
                                      text="Thank you"/>
                            </jobs>
                        </folder>
                    </jobs>
                </sequential>
            </jobs>
        </folder>
    </job>
</oddjob>
