<oddjob id="this">
    <job>
        <folder name="A Folder of Jobs">
            <jobs>
                <copy name="Copy Files"
                      to="${this.dir}/work">
                    <from>
                        <file file="${this.dir}/data/demo*"/>
                    </from>
                </copy>
                <copy name="Copy Directory"
                      to="${this.dir}/work/original">
                    <from>
                        <file file="${this.dir}/data"/>
                    </from>
                </copy>
                <sequential>
                    <jobs>
                        <variables id="v">
                            <buff>
                                <buffer/>
                            </buff>
                        </variables>
                        <copy id="copy"
                              name="Copy from a file to a buffer">
                            <from>
                                <file file="${this.dir}/data/some.txt"/>
                            </from>
                            <output>
                                <value value="${v.buff}"/>
                            </output>
                        </copy>
                        <echo name="What's in the file?">"${v.buff}</echo>
                    </jobs>
                </sequential>
            </jobs>
        </folder>
    </job>
</oddjob>
