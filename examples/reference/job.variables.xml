<oddjob>
    <job>
        <folder name=" ">
            <jobs>
                <sequential name="Simple Example">
                    <jobs>
                        <variables id="vars">
                            <greeting>
                                <value value="Hello World"/>
                            </greeting>
                        </variables>
                        <echo name="Issue a greeting.">${vars.greeting}"</echo>
                    </jobs>
                </sequential>
            </jobs>
        </folder>
    </job>
</oddjob>
